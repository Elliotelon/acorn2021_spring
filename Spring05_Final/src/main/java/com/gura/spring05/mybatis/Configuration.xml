<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Mapper xml 에서 자주 사용하는 type에 별칭을 부여 할 수 있다. -->
	<typeAliases>
		<typeAlias type="com.gura.spring05.users.dto.UsersDto" alias="usersDto"/>
		<typeAlias type="com.gura.spring05.cafe.dto.CafeDto" alias="cafeDto"/>
	</typeAliases>
	<!-- Mapper xml 문서의 위치 설정 -->
	<mappers>
		<mapper resource="com/gura/spring05/mybatis/UsersMapper.xml"/>
		<mapper resource="com/gura/spring05/mybatis/CafeMapper.xml"/>
	</mappers>
</configuration>